{
  "manifest_version": 3,
  "name": "TikTok Full Extension",
  "version": "1.0.0",
  "description": "A Chrome extension to work with different tools in TikTok page, starting with authentication status checker",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.tiktok.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TikTok Full Extension"
  },
  "content_scripts": [
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
